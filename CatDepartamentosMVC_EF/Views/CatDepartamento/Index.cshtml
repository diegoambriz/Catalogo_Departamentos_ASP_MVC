@model IEnumerable<CatDepartamentosMVC_EF.Models.CatDepartamento>

@{
    ViewBag.Title = "Departamentos";
}

<h2>Departamentos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Departamento", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar Departamento: @Html.TextBox("searchString")
        <input type="submit" value="Buscar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Id Oficina", "Index", new { sortOrder = ViewBag.IdOfiSortParm })
        </th>
        <th>
            @Html.ActionLink("Descripcion Departamento", "Index", new { sortOrder = ViewBag.DescripDeptoSortParm })
        </th>
        <th>
            @Html.ActionLink("Departamento Activo", "Index", new { sortOrder = ViewBag.DeptoActivoSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Ofi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depto_Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depto_Activo)
            </td>
            <td>
                @Html.ActionLink("Modificar/Eliminar", "Edit", new { id = item.Id_Depto }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Depto })
                @*@Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Depto })*@
            </td>
        </tr>
    }

</table>
